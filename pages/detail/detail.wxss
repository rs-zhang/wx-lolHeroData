page {
    height: 100%;
}

.detailWrap {
    width: 750rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.detailWrap .bgs {
    position: relative;
    width: 100%;
    height: 480rpx;
}

.detailWrap .bgs>image {
    display: block;
    width: 100%;
}

.detailWrap .thumbs {
    position: absolute;
    left: 0;
    bottom: 0;
    display: flex;
    height: 100rpx;
}

.detailWrap .thumbs image {
    width: 100rpx;
    height: 100rpx;
    box-shadow: 0 0 2rpx #fff;
}

.detailWrap .detail {
    display: flex;
    flex: 1;
    overflow: hidden;
}

.detailWrap .detail .left {
    width: 300rpx;
    background-color: #333;
    padding: 40rpx 20rpx;
}

.detailWrap .detail .left .name {
    color: #fff;
}

.detailWrap .detail .left .title {
    color: #fff;
    font-weight: 700;
    font-size: 56rpx;
}

.detailWrap .detail .left .tags button {
    margin-right: 20rpx;
}

.detailWrap .detail .left .ability {
    margin-top: 20rpx;
    color: #fff
}

.detailWrap .detail .left .ability progress {
    margin-top: 10rpx;
}

.detailWrap .detail .right {
    flex: 1;
    background-color: #ccc;
    padding: 40rpx 20rpx;
    color: #333;
    overflow: auto;
}
.detailWrap .detail .right .titleText {
    color: #000;
    font-weight: 700;
    font-size: 40rpx;
}
.detailWrap .detail .right .story {
    margin-top: 10rpx;
    text-indent: 40rpx;
    height: auto;
}